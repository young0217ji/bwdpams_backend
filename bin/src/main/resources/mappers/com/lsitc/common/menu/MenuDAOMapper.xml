<mapper namespace="com.lsitc.domain.common.menu.dao.MenuDAO">
  <select id="selectMenuByConditions"
    parameterType="com.lsitc.domain.common.menu.entity.MenuEntity"
    resultType="com.lsitc.domain.common.menu.entity.MenuEntity">
    SELECT DISTINCT SM.PLANTID
         , SM.MENUID
         , SM.MENUNAME
         , SM.MENUNAME_EN AS MENUNAMEEN
         , IIF(SM.PARENTSID = '', NULL, SM.PARENTSID) AS PARENTSID
         , SM.URL
         , SM.USEFLAG
         , SM.POSITION
         , #{roleId} AS ROLEID
         , SM.ICON_CLASS AS ICONCLASS
    FROM SF_MENU SM, SF_ROLEMENUMAP SRM, SF_ROLE SR
    WHERE SM.USEFLAG = #{useFlag}
    AND SM.MENUID = SRM.MENUID
    AND SM.MENUTYPE = 'MES'
    AND SRM.ROLEID IN (SELECT * FROM STRING_SPLIT(#{roleId}, ','))
    AND SRM.PLANTID = SR.PLANTID
    AND SRM.ROLEID = SR.ROLEID
    AND SR.ROLETYPE = 'MENU'
    ORDER BY SM.POSITION
  </select>
  
  <select id="selectMenuById"
    parameterType="com.lsitc.domain.common.menu.entity.MenuEntity"
    resultType="com.lsitc.domain.common.menu.entity.MenuEntity">
    SELECT DISTINCT SM.PLANTID
         , SM.MENUID
         , SM.MENUNAME
         , SM.MENUNAME_EN AS MENUNAMEEN
         , IIF(SM.PARENTSID = '', NULL, SM.PARENTSID) AS PARENTSID
         , SM.URL
         , SM.USEFLAG
         , SM.POSITION
         , '' AS ROLEID
         , SM.ICON_CLASS AS ICONCLASS
    FROM SF_MENU SM
    WHERE SM.USEFLAG = #{useFlag}
    AND SM.MENUID = #{menuID}
    AND SM.MENUTYPE = 'MES'
    ORDER BY SM.POSITION
  </select>

  <select id="selectAll"
    resultType="com.lsitc.domain.common.menu.entity.MenuEntity">
    SELECT DISTINCT SM.PLANTID
         , SM.MENUID
         , SM.MENUNAME
         , SM.MENUNAME_EN AS MENUNAMEEN
         , IIF(SM.PARENTSID = '', NULL, SM.PARENTSID) AS PARENTSID
         , SM.URL
         , SM.USEFLAG
         , SM.POSITION
         , '' AS ROLEID
         , SM.ICON_CLASS AS ICONCLASS
    FROM SF_MENU SM
    WHERE SM.USEFLAG = #{useFlag}
    AND SM.MENUTYPE = 'MES'
    <!-- 권한별 메뉴 목록 실패시 전체 메뉴 Load 되지 않도록 하기 위한 추가 조건 -->
    AND 1 != 1
    ORDER BY SM.POSITION
  </select>

